function gitc {
    if [ -z "$1" ]; then
        echo -n "Enter commit message: "
        read msg
        echo -n "Enter commit desc: "
        read desc
        git commit -m $msg -m $desc
    else
        git commit -m "$@"
    fi
}

function gitcp {
    gitc "$@" && gitp;
}

